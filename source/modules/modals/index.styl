.iziModal
  background radial-gradient(172.68% 115.9% at 34.57% 0%, rgba(0, 92, 176, 1) 0%, rgba(32, 42, 92, 1) 38.29%, rgba(27, 15, 50, 1) 71.55%, rgba(35, 23, 47, 1) 99.48%)
  border-radius 0 !important
  max-width 649px !important
  min-height 610px !important
  height 610px !important

  .iziModal-wrap
    display flex
    flex-direction column
    align-items center
    justify-content space-between
    height 100% !important

    .iziModal-content
      display flex
      flex-direction column
      align-items center
      justify-content space-between
      height 100%
      padding 20px !important

html.iziModal-isAttached,
html.iziModal-isOverflow
  overflow visible

.modal
  &-close
    position absolute
    top 20px
    right 20px
    display none

    img
      height 24px
      width 24px

.modal-connect
  &-inner
    text-align center

.modal-error-accept
  &-inner
    text-align center

  &-title
    font-size 30px
    line-height 36px
    margin-bottom 45px

  &-message
    font-size 16px
    line-height 20px
    max-width 420px
    margin-bottom 35px
    text-align left

  &-buttons
    &-title
      font-size 20px
      line-height 25px
      margin-bottom 60px

    &-inner
      display flex
      align-items center
      justify-content center

      .button-filled
        margin-right 15px

.modal-error
  &-inner
    text-align center

  &-title
    font-size 60px
    line-height 75px
    margin-bottom 30px

  &-message
    font-size 16px
    line-height 20px
    margin-bottom 80px
    text-align left
    max-width 477px

.modal-processing
  &-title
    text-align center

@media (max-width 768px)
  .button
    font-size 16px
    padding 10px 25px

@media (max-width 650px)
  .iziModal
    max-width 100% !important
    height 100% !important

    &::before
      display none

    .iziModal-wrap
      padding 0

      .iziModal-content
        justify-content center
        max-width 360px

  .modal
    &-close
      display block

  .modal-success,
  .modal-processing
    &-title
      margin-bottom 150px