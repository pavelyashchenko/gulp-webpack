mixin modal-connect(data) 
  .modal.modal-connect#modal-connect
    button.modal-close(data-izimodal-close="")
      img(src="img/modals/modal-close-icon.svg", alt="Close")
    .modal-connect-inner
      h2.modal-connect-image
        img(src="img/modals/metamask-modal.png", alt="Metamask Picture")
      
      .modal-connect-button
        +button(type="button").button--red-filled
          | Connect Wallet

